<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="KikuzukiWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KikuzukiWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="KikuzukiWinUI">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <MediaPlayerElement x:Name="PreviewElement"
                                    Width="300"
                                    Height="240"
                                    AreTransportControlsEnabled="False" />
                    <Image x:Name="ImgCamera" Stretch="Uniform" Width="300" Height="240"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ButtonOpen" Click="ButtonOpenClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left">
                            <TextBlock x:Name="ButtonOpenText">Open Image</TextBlock>
                        </Button>
                        <Button x:Name="ButtonCopy" Click="ButtonCopyClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left">
                            <TextBlock x:Name="ButtonCopyText">Load Paste</TextBlock>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                          x:Name="ComboBoxCamera"
                          SelectionChanged="ComboBoxCameraChanged"
                          Margin="5"
                          Width="135"
                          Height="35"
                          SelectedIndex="0">
                        </ComboBox>
                        <Button x:Name="ButtonCamera" Click="ButtonCameraClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left">
                            <TextBlock x:Name="ButtonCameraText">Camera</TextBlock>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ButtonRecognize" Click="ButtonRecognizeClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left" IsEnabled="False">
                            <TextBlock x:Name="ButtonRecognizeText">Describe</TextBlock>
                        </Button>
                        <Button x:Name="ButtonOCR" Click="ButtonOCRClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left" IsEnabled="False">
                            <TextBlock x:Name="ButtonOCRText">Recognize</TextBlock>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                          x:Name="ComboBoxLang"
                          Margin="5"
                          Width="135"
                          Height="35"
                          SelectedIndex="0">
                        </ComboBox>
                        <Button x:Name="ButtonTrans" Click="ButtonTransClick" Width="135" Height="35" Margin="5" HorizontalAlignment="Left" IsEnabled="False">
                            <TextBlock x:Name="ButtonTransText">Translate</TextBlock>
                        </Button>
                    </StackPanel>
                    <TextBox x:Name="TextRecognized" Width="280" Height="200" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" IsReadOnly="True" />
                    <Button x:Name="ButtonClear" Click="ButtonClearClick" Width="280" Height="35" Margin="5" HorizontalAlignment="Left">
                        <TextBlock x:Name="ButtonClearText">Clear</TextBlock>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
